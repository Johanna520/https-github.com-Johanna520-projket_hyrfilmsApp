<Window x:Class="Store.Login1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    
    <Grid Background="Black">
        <Label Foreground="White" FontSize="32" Content="Welcome!" HorizontalAlignment="Center" Margin ="0,150,0,0" VerticalAlignment="Top"></Label>
        <TextBox Name="NameBox" HorizontalAlignment="Center" Margin="0,210,0,0" Text=" Enter your name..." TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Click="LogIn_click" Content="ENTER" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top"></Button>
    </Grid>
</Window>